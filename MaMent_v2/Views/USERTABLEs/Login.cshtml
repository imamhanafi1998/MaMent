@* menggunakan view model *@
@model MaMent_v2.ViewModels.USERTABLEVIEW

@{
    ViewBag.Title = "Login";
}

<h2 class="text-center mt-2">Login</h2>

<center>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class = "control-label col-md-2" id="">Username</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.USER.USERNAME, new { @class = "form-control" })
                    <div class="text-danger">@ViewBag.USERNAME</div>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2" id="">Password</div>
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.USER.USERPASSWORD, new { @class = "form-control", @type = "password" })
                    <div class="text-danger">@ViewBag.USERPASSWORD</div>
                    <div class="text-danger">@ViewBag.ErrorMessage</div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-primary btn-block" />
                </div>
            </div>
        </div>
    }
</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}